{
  "name": "hyperiot-app",
  "version": "0.0.3",
  "productName": "Cool app to hyperiot project",
  "main": "main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --prod",
    "test": "ng test --browsers='ChromeHeadless' --watch=false",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "electron-build-mac": "npm run clean && npm run build && electron-packager . --overwrite --platform=darwin --arch=x64 --icon=dist/assets/icons/mac/icons.icns --prune=true --out=release-builds",
    "clean": "rm -rf dist/ release-builds/ public/*",
    "firebase-deploy": "npm run clean && ng build --prod && cp -r dist/* public/ && firebase deploy",
    "docker": "npm run clean && ng build --prod && npm run docker-build",
    "docker-build": "docker build -t hyperiot-app . && docker run --name hyperiot-app -p 8080:80 -d hyperiot-app",
    "docker-clean": "docker rm hyperiot-app --force"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^8.0.3",
    "@angular/cdk": "^8.1.1",
    "@angular/common": "~8.0.0",
    "@angular/compiler": "~8.0.0",
    "@angular/core": "~8.0.0",
    "@angular/forms": "~8.0.0",
    "@angular/material": "^8.1.1",
    "@angular/platform-browser": "~8.0.0",
    "@angular/platform-browser-dynamic": "~8.0.0",
    "@angular/router": "~8.0.0",
    "animate.css": "^3.7.2",
    "chart.js": "^2.8.0",
    "hammerjs": "^2.0.8",
    "ng-recaptcha": "^5.0.0",
    "ng2-charts": "^2.3.0",
    "rxjs": "~6.4.0",
    "tslib": "^1.9.0",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.800.0",
    "@angular/cli": "~8.0.1",
    "@angular/compiler-cli": "~8.0.0",
    "@angular/language-service": "~8.0.0",
    "@types/jasmine": "~3.3.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "^5.0.0",
    "electron": "^5.0.7",
    "electron-packager": "^14.0.2",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~6.3.16",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "protractor": "~5.4.0",
    "ts-node": "~7.0.0",
    "tslint": "~5.15.0",
    "typescript": "~3.4.3"
  }
}
